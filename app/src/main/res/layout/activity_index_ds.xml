<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".Indexds">
    <include
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/heading"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/head"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/arraybtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Array"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_margin="12dp"
                android:background="@color/lightpink" />

            <Button
                android:id="@+id/linkedlistbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LinkedList"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_margin="12dp"
                android:background="@color/lightblue" />

            <Button
                android:id="@+id/stackbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="Stack"
                android:textSize="30sp"
                android:layout_margin="12dp"
                android:background="@color/yellow" />

            <Button
                android:id="@+id/queuebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Queue"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_margin="12dp"
                android:background="@color/orange" />

            <Button
                android:id="@+id/binarytreebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trees"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_margin="12dp"
                android:background="@color/purple_200" />

            <Button
                android:id="@+id/heapbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heap"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_margin="12dp"
                android:background="@color/lightpink" />

            <Button
                android:id="@+id/hashingbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hashing"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_margin="12dp"
                android:background="@color/purple_500" />

            <Button
                android:id="@+id/graphbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Graph"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_margin="12dp"
                android:background="@color/teal_700" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>